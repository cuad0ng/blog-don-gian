<div class="blog">
    <form action="/blogs/update/{{blog.id}}" method="POST">
        <div class="text-field">
            <label for="title">Title*</label>
            <input type="text" id="title" name="title" placeholder="Enter title" value="{{blog.title}}" required/>
        </div>
        <div class="text-field">
            <label for="description">Description*</label>
            <input type="text" id="description" name="description" placeholder="Enter description" value="{{blog.description}}" required/>
        </div>
        <div class="text-field">
            <label for="author">Author*</label>
            <input type="text" id="author" name="author" placeholder="Enter author" value="{{blog.author}}" required/>
        </div>
        <div class="text-field">
            <label for="tag">Tag*</label>
            <input type="text" id="tag" name="tag" placeholder="Enter tag" value="{{blog.tag}}" required/>
        </div>
        <div class="text-field">
            <label for="content">Content*</label>
            <textarea type="text" id="content" name="content" placeholder="Enter content" required>{{blog.content}}</textarea>
        </div>
        <button type="submit">EDIT</button>
    </form>
</div>